<div class="container-fluid p-4">
  <div class="row">
    <div class="col-md-12 mx-auto">

        <h1> Categoria de <%= @category.nombre %></h1>

      <%= link_to new_category_dish_path(@category,@dish), class: "btn btn-info btn-sm mb-3" do %>
          <%= fa_icon "plus-circle" %>
          Nuevo plato
      <% end %>
      <div class="card shadow">
        <div class="card-body">
          <div class="table-responsive">
            <p id="notice"><%= notice %></p>
            <table id="tablaCategories" class="table table-bordered table-hover">
            <thead>
            <tr>
              <th>Nombre</th>
              <th>Existencia</th>
              <th>Precio</th>
              <th>Descripcion</th>
              <th>Categoria</th>
              <th>Descripcion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
             <tbody>
             <% @dishes.each do |dish| %>
                 <tr>
                  <td><%= dish.nombre %></td>
                  <td><%= dish.existencia %></td>
                  <td><%= dish.precio %></td>
                  <td><%= dish.descripcion %></td>
                  <td><%= dish.category.nombre %></td>
                  <td><%= dish.category.descripcion %></td>
                  <td align="center">
                    <%= link_to  edit_category_dish_path(@category, dish), class: "btn btn-info btn-sm" do %>
                      Editar
                    <% end %></td>
                  <td align="center"><%= link_to category_dish_path(@category, dish), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Desea borrar el plato #{dish.nombre}"} do %>
                      Borrar
                    <% end %></td>
                 </tr>
               <% end %>
             </tbody>
           </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
