
<%= simple_form_for(@category) do |f| %>
  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :descripcion %>
  </div>

  <div class="form-actions">
    <%= f.submit @category.new_record? ? "Crear Categoría" : "Actualizar Categoría", :class => "btn btn-block btn-primary"%>
  </div>
<% end %>
