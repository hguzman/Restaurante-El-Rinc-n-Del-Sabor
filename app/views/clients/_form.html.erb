<%= simple_form_for(@client) do |e| %>
  <div class="form-inputs">
    <%= e.input :nombre%>
    <%= e.input :correo%>
    <%= e.input :direccion%>
    <div class="row">
      <div class="col">
        <%= e.input :cedula%>
      </div>
      <div class="col">
        <%= e.input :telefono%>
      </div>
    </div>
    <span>Â¿Desea activar este cliente?</span>
    <%= e.input :estado%>
  </div>
  <div class="form-actions">
    <%= e.submit @client.new_record? ? "Crear Cliente" : "Actualizar Cliente", :class => "btn btn-block btn-primary"%>
  </div>
<%end%>
