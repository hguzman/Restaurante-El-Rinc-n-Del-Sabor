<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-9 mx-auto">
            <div class="card text-center position">
                <div class="card-body">
                    <form action="/signup" method="POST">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Primer nombre" name="name" autofocus>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="Primer apellido" name="fullname">
                            </div>
                        </div>
                        <div class="agr">
                            <div class="form-group">
                                <input type="text" class="form-control" id="formGroupExampleInput"
                                 placeholder="Nombre de usuario" name="username">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" id="formGroupExampleInput"
                                 placeholder="Correo electronico" name="email">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="formGroupExampleInput2"
                                placeholder="Contraseña" name="password">
                                <small id="emailHelp" class="form-text text-muted">su contraseña debe tener como minimo 8 caracteres.</small>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Celular" required=""
                                     pattern="[0-9]+" minlength="10" maxlength="10" name="mobile">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" placeholder="Cedula" required="" pattern="[0-9]+" maxlength="10" name="cedula">
                                </div>
                                <div class="btn-radios p-2">
                                    <div class="custom-control custom-radio custom-control-inline mover">
                                        <input type="radio" id="customRadioInline1"
                                        class="custom-control-input" name="sexo" value="Hombre" checked required="">
                                        <label class="custom-control-label" for="customRadioInline1">Hombre</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline mover" >
                                        <input type="radio" id="customRadioInline2"
                                        class="custom-control-input" name="sexo" value="Mujer">
                                        <label class="custom-control-label" for="customRadioInline2">Mujer</label>
                                    </div>
                                </div>
                                <div class="custom-control custom-checkbox ajustar">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1" required="" name="tyc" value="Acepto">
                                    <label class="custom-control-label" for="customCheck1" >Acepta los terminos y condiciones.</label>
                                </div>
                                <div class="ajustar-btn">
                                  <button class="btn btn-success btn-lg btn-block">Iniciar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
